{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",                     // Changed from ESNext
    "moduleResolution": "NodeNext",           // Changed from node
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}